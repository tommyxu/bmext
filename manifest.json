{
  "manifest_version": 2,

  "name": "Bookmark Sorter v2",
  "description": "This extension is to sort bookmark by URL",
  "version": "1.2",
  //"default_locale": "en",
  "icons": { "128": "icon.png" },

  "background": {
    "scripts": ["background.js"],
    "persistent":false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "commands" : {
    "main_sort_action": {
        "suggested_key" : {
            "default":"Alt+Shift+O"
        },
        "description" : "trigger main sort action"
    }
  },

  "permissions": [
    "background", //chrome-extension://*/",

    "bookmarks",
    "contextMenus",
    "debugger",
    "management",
    "tabs"
  ]
}

