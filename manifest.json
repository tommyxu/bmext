{
  "manifest_version": 2,

  "name": "Bookmark Extend",
  "description": "This extension is to sort bookmark by URL",
  "version": "1.1",
  //"default_locale": "en",
  "icons": { "128": "icon.png" },

  "background": {
    "scripts": ["background.js"],
    "persistent":false
  },

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "commands" : {
    "main_action": {
        "suggested_key" : {
            "default":"Alt+Shift+O"
        },
        "description" : "trigger main action"
    },
    "_execute_browser_action": {
        "suggested_key": {
            "default": "Ctrl+Shift+F",
            "mac": "MacCtrl+Shift+F"
        }
    }
  },


  "permissions": [
    "bookmarks",
    "contextMenus",
    "debugger",
    "management"
//    "downloads"
  ]
}

